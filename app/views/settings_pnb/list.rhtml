<html>

<head>
<title>Edit Configurations</title>
</head>

<body>

<% @t = Setting.find_by_sql("select * from settings" ) %> <% @t.each do |c| %>
<table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse" bordercolor="#111111" width="87%" id="AutoNumber1" height="346">
  <tr>
    <td width="100%" height="273">
    <table border="0" cellpadding="0" cellspacing="10" style="border-collapse: collapse" bordercolor="#800000" width="100%%" id="AutoNumber2" height="294" align="left">
      <tr>
        <td width="100%" height="294">
        <table border="5" cellpadding="10" cellspacing="10" style="border-collapse: collapse" bordercolor="#800000" width="100%" id="AutoNumber3" height="187">
          <tr>
            <td width="100%" height="187">
             <fieldset  width=300 style="padding: 2; height:270">
                <legend><font face="Arial" size="4" color="#800000">Configurable 
                settings</font></legend>
&nbsp;<table border="0" cellpadding="5" cellspacing="0" style="border-collapse: collapse" bordercolor="#111111" width="100%" id="AutoNumber6" height="71">
                  <tr>
                    <td width="44%" height="22"><font face="Arial">Missing Count:</font></td>
                    <td width="56%" height="22">&nbsp;
                    <input type="text" name="T1" value="<%= c.missingcount %>" size="15" disabled></td>
                  </tr>
                  <tr>
                    <td width="44%" height="25"><font face="Arial">Missing Time:</font></td>
                    <td width="56%" height="25">&nbsp;
                    <input type="text" name="T1" value="<%= c.missingtime %>" size="15" disabled></td>
                  </tr>
                  <tr>
                    <td width="44%" height="49"><font face="Arial">Screen Timeout<br>
                    (in seconds):</font></td>
                    <td width="56%" height="49">&nbsp;
                    <input type="text" name="T1" value="<%= c.returntime %>" size="15" disabled></td>
                  </tr>
                  <tr>
                    <td width="44%" height="49"><font face="Arial">Purging Interval<br>
                    (in days):</font></td>
                    <td width="56%" height="49">&nbsp;
                    <input type="text" name="T1" value="<%= c.purgingdata %>" size="15" disabled></td>
                  </tr>
                  <% if @session['user']['usertype']=="SuperAdmin" %>	

                  <tr>
                    <td width="44%" height="49"><font face="Arial">Title Of the Window:</font></td>
                    <td width="56%" height="49">&nbsp;
                    <input type="text" name="T1" value="<%= c.windowtitle %>" size="15" disabled></td>
                  </tr>
					<% end %>
                  <tr>
                <td width="100%" height="25" align="center" colspan=2><%= link_to 'Edit', :action => 'edit', :id => c.id %>
                <%# link_to 'Back', :controller=>'backup', :action => 'settings' %>
                </td>
              </tr>
                </table>
                </fieldset>
              
            
            </td><%end%> 
          </tr>
        </table>
        </center>
        </div>
        </td>
      </tr>
    </table>
    </td>
  </tr>
 </table>

</body>

</html>